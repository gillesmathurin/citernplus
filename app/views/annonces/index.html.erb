<div id="yui-main">
	<div class="yui-b">
		<div class="yui-g">
			
			<h1>Listing annonces</h1>
			
			<table>
			  <tr>
			    <th>Message</th>
			    <th>Du</th>
			    <th>Au</th>
			  </tr>

			<% @annonces.each do |annonce| %>
			  <tr>
			    <td><%=h annonce.message %></td>
			    <td><%=h annonce.starts_at %></td>
			    <td><%=h annonce.ends_at %></td>
			    <td><%= link_to 'Voir', annonce %></td>
			    <td><%= link_to 'Modifier', edit_annonce_path(annonce) %></td>
			    <td><%= link_to 'Supprimer', annonce, :confirm => 'Etes vous sur?', :method => :delete %></td>
			  </tr>
			<% end %>
			</table>

			<br />

			<%= link_to 'Créer une annonce', new_annonce_path %>
		</div>
	</div>
</div>

